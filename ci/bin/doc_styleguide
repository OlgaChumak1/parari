#!/usr/bin/env node

/**
 * @file Generate documents.
 */

"use strict";

var h = require('../_helper'),
    async = h.async,
    tasks = h.tasks,
    configs = require('../configs');

process.chdir(h.basedir);

async.eachSeries([
    {
        config: configs.budConfig,
        task: tasks.BudTask
    },
    {
        config: configs.kssConfig,
        task: tasks.KssTask
    }
], function (data, callback) {
    new (data.task)(data.config).run(callback);
}, h.done('Doc done!'));